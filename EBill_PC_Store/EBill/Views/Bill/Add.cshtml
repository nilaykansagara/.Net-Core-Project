@model EBill.Models.Domain.Bill
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Bill</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="customerName">Customer Name *</label>
                    <input type="text" class="form-control" asp-for="customerName" />
                    <span asp-validation-for="customerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmailId">Email ID *</label>
                    <input type="email" class="form-control" asp-for="EmailId" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Address *</label>
                    <input type="text" class="form-control" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Phone No. *</label>
                    <input type="string" class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="ModelId">Model *</label>
                    <select asp-for="ModelId" asp-items="Model.ModelList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="ModelId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="WarrantyId">Warranty *</label>
                    <select asp-for="WarrantyId" asp-items="Model.WarrantyList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="WarrantyId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StorageId">Storage *</label>
                    <select asp-for="StorageId" asp-items="Model.StorageList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="StorageId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date">Purchase Date *</label>
                    <input type="date" class="form-control" asp-for="Date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Price. *</label>
                    <input type="number" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>




                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Bill/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>

